{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "启动小六壬MCP服务器",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/index.js",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std"
    },
    {
      "name": "调试小六壬MCP服务器",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/index.js",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "1"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std",
      "stopOnEntry": false
    }
  ]
}